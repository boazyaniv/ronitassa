---
import productsData from '../data/products.json';

interface Props {
  product: any;
}

const { product } = Astro.props;
const cookingMethods = productsData.cookingMethods;
const badges = productsData.badges;
---

<div class="group bg-white/5 border border-white/10 rounded-2xl overflow-hidden hover:border-primary-red/30 hover:shadow-2xl hover:shadow-primary-red/10 transition-all duration-300 transform hover:-translate-y-2">
  <!-- Product Image -->
  <div class="aspect-square relative overflow-hidden bg-neutral-900">
    {product.image ? (
      <img
        src={product.image}
        alt={product.name}
        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
        loading="lazy"
      />
    ) : (
      <div class="w-full h-full flex items-center justify-center bg-neutral-800">
        <svg class="w-20 h-20 text-accent/20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
        </svg>
      </div>
    )}

  </div>

  <!-- Product Info -->
  <div class="p-6">
    <h3 class="text-xl font-bold mb-1 text-white group-hover:text-accent transition-colors">{product.name}</h3>
    
    <div class="flex justify-between items-start gap-2 mb-2">
      <p class="text-primary font-bold text-lg">{product.price}</p>
    </div>

    {product.cutType && (
      <p class="text-sm mb-2 text-accent/80 font-medium tracking-wide">{product.cutType}</p>
    )}
    
    <p class="mb-4 text-gray-400 leading-relaxed text-sm line-clamp-2">{product.description}</p>

    {product.cuttingOptions && product.cuttingOptions.length > 1 && (
      <div class="mt-auto pt-3 border-t border-white/5">
        <p class="text-xs text-gray-500 mb-2">אפשרויות חיתוך:</p>
        <div class="flex flex-wrap gap-2">
          {product.cuttingOptions.map((option: any) => (
            <span class="text-xs text-gray-300 bg-white/5 px-2 py-1 rounded border border-white/5">{option}</span>
          ))}
        </div>
      </div>
    )}

    <!-- Cooking Methods -->



  </div>
</div>
