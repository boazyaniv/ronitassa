---
import BaseLayout from '../../layouts/BaseLayout.astro';
import productsData from '../../data/products.json';
import siteInfo from '../../data/site-info.json';
import { Image } from 'astro:assets';
import heroBgImg from '../../assets/images/hero-bg.png';
import beefCategoryImg from '../../assets/images/beef-category.png';
import lambCategoryImg from '../../assets/images/lamb-category.png';
import chickenCategoryImg from '../../assets/images/chicken-category.png';
import homemadeCategoryImg from '../../assets/images/homemade-category.png';

const pageTitle = "מחלקות המוצרים | רוני טסה - קצביית בוטיק";
const pageDescription = "גלו את מגוון מחלקות הבשר המשובח שלנו: בקר מיושן, טלה משובח, עוף טרי ומוצרים בייצור ביתי. איכות ללא פשרות מאז 1971.";

const categories = [
  { id: 'beef', title: 'בקר טרי', image: beefCategoryImg, link: '/products/beef', description: 'נתחי בקר מובחרים, מיושנים במקום בתנאים מבוקרים.' },
  { id: 'lamb', title: 'טלה משובח', image: lambCategoryImg, link: '/products/lamb', description: 'נתחי כבש וטלה טריים המצטיינים ברכות ובעסיסיות יוצאת דופן.' },
  { id: 'chicken', title: 'עוף טרי', image: chickenCategoryImg, link: '/products/chicken', description: 'עוף טרי המגיע אלינו מדי בוקר, נקי ומוכן לבישול.' },
  { id: 'homemade', title: 'תוצרת בית', image: homemadeCategoryImg, link: '/products/homemade', description: 'מגוון מוצרי בשר איכותיים בהכנה ביתית, מתובלים ומוכנים לצלייה.' },
];
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="relative h-[50vh] flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0 z-0">
      <Image 
        src={heroBgImg} 
        alt="מוצרי בשר מובחרים" 
        class="w-full h-full object-cover object-center"
        quality="high"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-black/80 via-black/60 to-neutral-950"></div>
    </div>
    
    <div class="relative z-10 text-center text-white px-4 max-w-4xl mx-auto" data-aos="fade-up">
      <h1 class="text-5xl md:text-7xl font-bold mb-6 tracking-tight">
        <span class="block text-primary-red drop-shadow-lg mb-2">המוצרים שלנו</span>
        <span class="block text-3xl md:text-5xl font-light text-gray-200">איכות של קצביית בוטיק</span>
      </h1>
      <p class="text-xl md:text-2xl text-gray-300 font-light max-w-2xl mx-auto leading-relaxed">
        בחרו את המחלקה המבוקשת וגלו את הנתחים המשובחים ביותר שאספנו עבורכם.
      </p>
    </div>
  </section>

  <!-- Categories Grid -->
  <section class="py-24 bg-neutral-950">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">המחלקות שלנו</h2>
        <div class="w-24 h-1 bg-primary-red mx-auto rounded-full"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-7xl mx-auto">
        {categories.map((category) => (
          <a href={category.link} class="group relative h-[450px] rounded-2xl overflow-hidden shadow-2xl cursor-pointer block border border-white/5 hover:border-primary-red/30 transition-colors duration-500">
            <Image 
              src={category.image} 
              alt={category.title} 
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              width={600}
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/95 via-black/40 to-transparent opacity-80 group-hover:opacity-95 transition-opacity duration-300"></div>
            <div class="absolute bottom-0 left-0 right-0 p-8 text-center transform translate-y-4 group-hover:translate-y-0 transition-all duration-300">
              <h3 class="text-3xl font-bold text-white mb-3">{category.title}</h3>
              <p class="text-gray-300 text-sm mb-6 opacity-0 group-hover:opacity-100 transition-opacity duration-300 line-clamp-2">
                {category.description}
              </p>
              <span class="inline-block bg-primary-red text-white text-sm font-bold px-6 py-2 rounded-full transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300 delay-100 hover:bg-red-700">
                לצפייה במוצרים
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Special Order CTA -->
  <section class="py-20 bg-neutral-900 border-t border-white/10">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-8">לא מצאתם נתח מסוים?</h2>
        <p class="text-xl text-gray-400 mb-10 leading-relaxed">
          בנוסף למחלקות העיקריות, אנו מחזיקים במגוון נתחים מיוחדים בהזמנה מראש, דגים קפואים מובחרים ומוצרי מכולת להשלמת החוויה.
          צרו איתנו קשר ונעזור לכם למצוא בדיוק את מה שאתם מחפשים.
        </p>
        <div class="flex flex-wrap justify-center gap-6">
          <a href="/contact" class="btn btn-primary px-10 py-4 text-xl shadow-lg shadow-red-900/20 transform hover:-translate-y-1 transition-all">
            דברו איתנו
          </a>
          <a href={`tel:${siteInfo.contact.phone}`} class="btn bg-white/5 border border-white/10 text-white hover:bg-white/10 px-10 py-4 text-xl transform hover:-translate-y-1 transition-all">
            {siteInfo.contact.phone}
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
