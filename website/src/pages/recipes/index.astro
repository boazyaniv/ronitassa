---
import BaseLayout from '../../layouts/BaseLayout.astro';

const pageTitle = "מתכונים מומלצים | רוני טסה - קצביית בוטיק";
const pageDescription = "אוסף המתכונים המובחרים של רוני טסה. גלו איך להכין סטייק מושלם, המבורגר עסיסי ותבשילי קדירה עם הבשר הטרי שלנו.";

const recipes = [
  {
    title: "צלי כתף בבישול איטי",
    description: "צלי כתף מספר 5 ביין אדום וירקות שורש, בבישול ארוך ונימוח",
    image: "/images/products/chuck-roast/chuck-roast.png",
    link: "/recipes/chuck-roast",
    bakingTime: "3.5 שעות",
    difficulty: "בינוני"
  },
  {
    title: "סטייק אנטריקוט במחבת",
    description: "איך להכין סטייק אנטריקוט במחבת שיוצא רך, עסיסי ומדויק",
    image: "/images/products/ribeye/ribeye.png",
    link: "/recipes/entrecote-steak",
    bakingTime: "15 דקות",
    difficulty: "בינוני"
  },
  {
    title: "תבשיל אסאדו חגיגי",
    description: "אסאדו בתנור בבישול ארוך שמתפרק מהעצם ונמס בפה",
    image: "/images/products/asado/asado.png",
    link: "/recipes/festive-asado",
    bakingTime: "3 שעות",
    difficulty: "קל-בינוני"
  }
];
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="relative h-[50vh] flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0 z-0">
      <img 
        src="/images/hero-bg.png" 
        alt="מתכוני בשר מובחרים" 
        class="w-full h-full object-cover opacity-60"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-neutral-950 via-neutral-950/50 to-transparent"></div>
    </div>
    <div class="relative z-10 text-center px-4 max-w-4xl mx-auto">
      <h1 class="text-5xl md:text-7xl font-bold mb-6 text-white drop-shadow-lg">המתכונים של רוני</h1>
      <p class="text-xl md:text-2xl text-gray-200 font-light max-w-2xl mx-auto">
        הדרך להפוך בשר מצוין לארוחה בלתי נשכחת מתחילה כאן. אספנו עבורכם את המתכונים המנצחים שלנו.
      </p>
    </div>
  </section>

  <!-- Recipes Grid -->
  <section class="py-20 bg-neutral-950">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-7xl mx-auto">
        {recipes.map((recipe) => (
          <a href={recipe.link} class="group block bg-neutral-900 border border-white/10 rounded-2xl overflow-hidden hover:border-primary-red/30 hover:shadow-2xl hover:shadow-primary-red/10 transition-all duration-300 transform hover:-translate-y-2">
            <div class="aspect-video relative overflow-hidden">
              <img 
                src={recipe.image} 
                alt={recipe.title}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent opacity-60 group-hover:opacity-40 transition-opacity"></div>
              
              <!-- Badge -->
              <div class="absolute top-4 right-4 bg-primary-red text-white text-xs font-bold px-3 py-1 rounded-full shadow-lg">
                מתכון מומלץ
              </div>
            </div>
            
            <div class="p-6">
              <h3 class="text-2xl font-bold mb-3 text-white group-hover:text-primary-red transition-colors">{recipe.title}</h3>
              <p class="text-gray-400 mb-6 leading-relaxed line-clamp-2">{recipe.description}</p>
              
              <div class="flex items-center justify-between text-sm text-gray-500 border-t border-white/5 pt-4">
                <div class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-red" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>{recipe.bakingTime}</span>
                </div>
                <div class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-red" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                  </svg>
                  <span>{recipe.difficulty}</span>
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
